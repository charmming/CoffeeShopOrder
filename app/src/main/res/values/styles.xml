<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App branding color for the app bar -->
        <item name="colorPrimary">#009688</item>
        <!-- Darker Variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#00796B</item>
        <!-- Theme UI controls like the checkbox and text fields -->
        <item name="colorAccent">#536DFE</item>
        <!-- Theme UI controls like the checkbox and text fields -->
        <item name="colorButtonNormal">#536DFE</item>
    </style>

    <!-- Style for a Header TextVeiw -->
    <style name="customText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#4527A0</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

</resources>
